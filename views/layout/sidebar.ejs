  <style>
    .sidebar_is_open {
    width: 15rem!important;
    transition: 0.4s all ease-out;
    }
    .user_img_is_big {
      width: 100px;
      height: 100px;
      transition: 0.4s all ease-out;
    }
    .title_is_show {
      display:flex;
    }
    .hidden {
      display: none!important;
    }
  </style>

  


  <script>

    var isOpen = true;
    
    $(document).off('click', '.diamond');
    $(document).on('click', '.diamond', function() {
      if (!isOpen) {
        $('.main_sidebar').addClass('sidebar_is_open');
        $('.user_img').addClass('user_img_is_big');
        $('.menu-item').removeClass('hidden');
        isOpen = !isOpen;
      }else {
        $('.main_sidebar').removeClass('sidebar_is_open');
        $('.user_img').removeClass('user_img_is_big');
        $('.menu-item').addClass('hidden');
        isOpen = !isOpen;
      }




      
    });
    

  </script>

